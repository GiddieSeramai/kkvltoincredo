<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greySecondary"
    android:orientation="vertical"
    tools:context=".other.ChangePIN">

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_logo_incredo" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backPressed"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginEnd="15dp"
                android:src="@drawable/ic_incredo_nav" />

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical"
        android:animateLayoutChanges="true"
        android:background="@color/salmon"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtAccount"
            android:layout_width="wrap_content"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/red_hat_display_bold"
            android:gravity="center_vertical"
            android:text="Change Pin"
            android:textColor="@color/colorWhite"
            android:textSize="20sp" />
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_margin="10dp"
            android:animateLayoutChanges="true"

            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:elevation="10dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:id="@+id/ln_whole_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:orientation="vertical"
                    android:padding="20dp">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:fontFamily="@font/red_hat_display_bold"
                        android:gravity="left"
                        android:text="Old PIN"
                        android:textSize="@dimen/text_size" />


                    <EditText
                        android:id="@+id/et_pin"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="end"
                        android:background="@drawable/incredo_custom_input"
                        android:fontFamily="@font/red_hat_display_regular"
                        android:inputType="number"
                        android:paddingLeft="10dp"
                        android:textSize="@dimen/text_size" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/red_hat_display_bold"
                        android:gravity="left"
                        android:text="*New PIN"
                        android:textSize="@dimen/text_size" />


                    <EditText
                        android:id="@+id/et_pay_amount"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="end"
                        android:background="@drawable/incredo_custom_input"
                        android:fontFamily="@font/red_hat_display_regular"
                        android:inputType="textEmailAddress"
                        android:paddingLeft="10dp"
                        android:textSize="@dimen/text_size" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/red_hat_display_bold"
                        android:gravity="left"
                        android:text="*Confirm PIN"
                        android:textSize="@dimen/text_size" />


                    <EditText
                        android:id="@+id/et_loan_account"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="end"
                        android:background="@drawable/incredo_custom_input"
                        android:fontFamily="@font/red_hat_display_regular"
                        android:inputType="number"
                        android:paddingLeft="10dp"
                        android:textSize="@dimen/text_size" />


                    <TextView
                        android:id="@+id/txt_pay"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/incredo_button"
                        android:fontFamily="@font/red_hat_display_bold"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="CHANGE PIN"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>
</LinearLayout>
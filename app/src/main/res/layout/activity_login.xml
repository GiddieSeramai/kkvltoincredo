<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ln_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greySecondary"
    android:orientation="vertical"
    tools:context=".WelcomeActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_logo_incredo" />


    <!--        android:fontFamily="@font/red_hat_display_regular"-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/red_hat_display_regular"
        android:text="Enter Four Digit PIN"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ln_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_margin="10dp"
                android:fontFamily="@font/red_hat_display_bold"
                android:gravity="center"
                android:orientation="vertical">

                <com.github.ybq.android.spinkit.SpinKitView
                    android:id="@+id/sp_login"
                    style="@style/SpinKitView.Circle"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:visibility="gone"
                    app:SpinKit_Color="@color/salmon" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/edtPassword"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_marginBottom="10dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:inputType="numberPassword"
                        android:lineSpacingMultiplier="3"
                        android:maxLength="4"
                        android:maxLines="1"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="45dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_marginBottom="16dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/button_one"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/rounded_pin_button"
                            android:fontFamily="@font/red_hat_display_regular"
                            android:text="1"
                            android:textSize="16dp" />

                        <Button
                            android:id="@+id/button_two"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginRight="15dp"
                            android:background="@drawable/rounded_pin_button"
                            android:fontFamily="@font/red_hat_display_regular"
                            android:text="2"
                            android:textSize="16dp" />

                        <Button
                            android:id="@+id/button_three"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@drawable/rounded_pin_button"
                            android:fontFamily="@font/red_hat_display_regular"
                            android:text="3"
                            android:textSize="16dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_marginBottom="16dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button

                            android:id="@+id/button_four"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginRight="15dp"
                            android:background="@drawable/rounded_pin_button"
                            android:fontFamily="@font/red_hat_display_regular"
                            android:text="4"
                            android:textSize="16dp" />

                        <Button
                            android:id="@+id/button_five"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginRight="15dp"
                            android:background="@drawable/rounded_pin_button"
                            android:fontFamily="@font/red_hat_display_regular"
                            android:text="5"
                            android:textSize="16dp" />

                        <Button
                            android:id="@+id/button_six"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@drawable/rounded_pin_button"
                            android:fontFamily="@font/red_hat_display_regular"
                            android:text="6"
                            android:textSize="16dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/button_seven"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginRight="15dp"
                            android:background="@drawable/rounded_pin_button"
                            android:fontFamily="@font/red_hat_display_regular"
                            android:text="7"
                            android:textSize="16dp" />

                        <Button
                            android:id="@+id/button_eight"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginRight="15dp"
                            android:background="@drawable/rounded_pin_button"
                            android:fontFamily="@font/red_hat_display_regular"
                            android:text="8"
                            android:textSize="16dp" />

                        <Button
                            android:id="@+id/button_nine"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@drawable/rounded_pin_button"
                            android:fontFamily="@font/red_hat_display_regular"
                            android:text="9"
                            android:textSize="16dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">


                        <Button
                            android:id="@+id/imgCancel"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginLeft="15dp"
                            android:background="@drawable/rounded_pin_button"
                            android:fontFamily="@font/red_hat_display_regular"
                            android:text="C"
                            android:textColor="#DC143C"
                            android:textSize="16dp" />

                        <Button
                            android:id="@+id/button_zero"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginLeft="15dp"
                            android:background="@drawable/rounded_pin_button"
                            android:fontFamily="@font/red_hat_display_regular"
                            android:text="0"
                            android:textSize="16dp" />

                        <Button
                            android:id="@+id/txtOk"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:background="@drawable/rounded_pin_button"
                            android:fontFamily="@font/red_hat_display_regular"
                            android:text="OK"
                            android:textColor="#439A3E"
                            android:textSize="16dp" />
                    </LinearLayout>
                </LinearLayout>


                <TextView
                    android:id="@+id/txtAttempts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#CF0F1A" />

                <TextView
                    android:id="@+id/txtRemarks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#CF0F1A" />

                <TextView
                    android:id="@+id/txtForgotPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/red_hat_display_bold"
                    android:gravity="center_horizontal"
                    android:text="Forgot Pin?"
                    android:textColor="@color/colorBlack"
                    android:textSize="14dp" />

                <Button
                    android:id="@+id/buttonSignup"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/incredo_button"
                    android:fontFamily="@font/red_hat_display_bold"
                    android:onClick="refer"
                    android:text="Refer A Friend"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>


</LinearLayout>
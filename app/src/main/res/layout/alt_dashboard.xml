<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greySecondary"
    tools:context=".WelcomeActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:animateLayoutChanges="true"
        android:background="@color/colorGray"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/im_drawer"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="2dp"
            android:padding="7dp"

            android:src="@mipmap/ic_ngao_menu" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="2dp"
            android:padding="7dp"

            android:src="@mipmap/kkvl" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|left"
            android:layout_marginRight="40dp"
            android:layout_weight="1"
            android:fontFamily="@font/red_hat_display_regular"
            android:gravity="left|center_vertical"
            android:padding="5dp"
            android:text="KaribuKash"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/im_logout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:padding="9dp"
            android:src="@mipmap/ic_kkvl_logout" />

        <ImageView
            android:id="@+id/im_notifications"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:padding="9dp"
            android:src="@mipmap/ic_kkvl_white_bell" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:id="@+id/cv_one_login"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/bubble"
            android:elevation="0dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bubble"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/im_profile_pic"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_margin="10dp"
                            android:layout_marginRight="40dp"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/background_circle"
                            android:padding="10dp"
                            android:src="@mipmap/ic_user_kkvl" />

                        <TextView
                            android:id="@+id/txt_name"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical|left"
                            android:layout_weight="1"
                            android:fontFamily="@font/red_hat_display_regular"
                            android:gravity="left|center_vertical"
                            android:padding="5dp"
                            android:text="LYDIA NTHENYA NZAU"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|left"
                            android:layout_weight="2"
                            android:fontFamily="@font/red_hat_display_bold"
                            android:gravity="left|center_vertical"
                            android:padding="5dp"
                            android:text="Account Number"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txt_account_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|left"
                            android:layout_weight="1"
                            android:fontFamily="@font/red_hat_display_regular"
                            android:gravity="left|center_vertical"
                            android:lineSpacingExtra="10dp"
                            android:padding="5dp"
                            android:text="................"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical|left"
                            android:layout_weight="2"
                            android:fontFamily="@font/red_hat_display_bold"
                            android:gravity="left|center_vertical"
                            android:padding="5dp"
                            android:text="Loan Limit"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txt_loan_limit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/red_hat_display_regular"
                            android:gravity="left|center_vertical"
                            android:padding="5dp"
                            android:text="................"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical|left"
                            android:layout_weight="2"
                            android:fontFamily="@font/red_hat_display_bold"
                            android:gravity="left|center_vertical"
                            android:padding="5dp"
                            android:text="Loan Arrears"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txt_loan_arrears"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|left"
                            android:layout_weight="1"
                            android:fontFamily="@font/red_hat_display_regular"
                            android:gravity="left|center_vertical"
                            android:padding="5dp"
                            android:text="................"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size"
                            android:textStyle="bold" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ln_balance_enquiry"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="105dp"
                            android:layout_height="105dp"
                            android:background="@drawable/rectangle"
                            android:padding="30dp"
                            android:src="@mipmap/ic_kkvl_user" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/red_hat_display_regular"
                            android:gravity="center_horizontal"
                            android:padding="5dp"
                            android:text="Account Enquiry"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ln_loan_statement"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="105dp"
                            android:layout_height="105dp"
                            android:background="@drawable/rectangle"
                            android:padding="30dp"
                            android:src="@mipmap/ic_kkvl_statement" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/red_hat_display_regular"
                            android:gravity="center_horizontal"
                            android:padding="5dp"
                            android:text="Loan Statement"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ln_loan_application"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/colorGray"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="105dp"
                            android:layout_height="105dp"
                            android:background="@drawable/rectangle"
                            android:padding="30dp"
                            android:src="@mipmap/ic_kkvl_receive" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/red_hat_display_regular"
                            android:gravity="center_horizontal"
                            android:padding="5dp"
                            android:text="Borrow Loan"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/text_size" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ln_pay_loan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="105dp"
                            android:layout_height="105dp"
                            android:background="@drawable/rectangle"
                            android:padding="30dp"
                            android:src="@mipmap/ic_kkvl_cash_at_hand" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/red_hat_display_regular"
                            android:gravity="center_horizontal"
                            android:padding="5dp"
                            android:text="Pay Loan"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ln_contact_us"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="105dp"
                            android:layout_height="105dp"
                            android:background="@drawable/rectangle"
                            android:padding="30dp"
                            android:src="@mipmap/ic_kkvl_contact_form" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/red_hat_display_regular"
                            android:gravity="center_horizontal"
                            android:padding="5dp"
                            android:text="Talk to Us"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ln_settings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/colorGray"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="105dp"
                            android:layout_height="105dp"
                            android:background="@drawable/rectangle"
                            android:padding="30dp"
                            android:src="@mipmap/ic_kkvl_settings" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/red_hat_display_regular"
                            android:gravity="center_horizontal"
                            android:padding="5dp"
                            android:text="Settings"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/text_size" />
                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.extrainch.kkvl.decor.CurvedBottomNavigationView
            android:id="@+id/customBottomBar"
            android:layout_width="match_parent"
            android:layout_height="62dp"

            android:background="@color/colorAccent"
            android:theme="@style/BottomNavigationTheme"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/lin_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_margin="20dp"
        android:background="@drawable/circle">


        <ImageView
            android:id="@+id/fab"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerInParent="true"
            android:layout_margin="12dp"
            android:elevation="6dp"
            android:src="@mipmap/ic_home_kkvl" />

    </RelativeLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
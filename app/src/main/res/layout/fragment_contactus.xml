<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frag_ins"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.bottom_nav_bar.Contact">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/greySecondary"
        android:orientation="vertical"
        tools:context=".loans.LoanApplication">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:animateLayoutChanges="true"
            android:background="@color/salmon"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtAccount"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/red_hat_display_bold"
                android:gravity="center_vertical"
                android:text="Contact us."
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                android:layout_margin="10dp"
                android:animateLayoutChanges="true"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:elevation="10dp"
                    app:cardBackgroundColor="#fcfcfc"
                    app:cardCornerRadius="10dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:id="@+id/lnWholeView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:layout_margin="20dp"
                            android:fontFamily="@font/red_hat_display_regular"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="Please fill out the form below and we will get back to you as soon as possible."
                            android:textSize="@dimen/text_size"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:fontFamily="@font/red_hat_display_bold"
                            android:gravity="left"
                            android:text="*Name and Membership No" />

                        <EditText
                            android:id="@+id/etClientName"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_gravity="end"
                            android:background="@drawable/incredo_custom_input"
                            android:fontFamily="@font/red_hat_display_regular"
                            android:inputType="text"
                            android:paddingLeft="10dp"
                            android:textSize="@dimen/text_size" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/red_hat_display_bold"
                            android:gravity="left"
                            android:text="*Email" />

                        <EditText
                            android:id="@+id/etClientEmail"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_gravity="end"
                            android:background="@drawable/incredo_custom_input"
                            android:fontFamily="@font/red_hat_display_regular"
                            android:inputType="textEmailAddress"
                            android:paddingLeft="10dp"
                            android:textSize="@dimen/text_size" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/red_hat_display_bold"
                            android:gravity="left"
                            android:text="*Phone" />

                        <EditText
                            android:id="@+id/etPhone"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_gravity="end"
                            android:background="@drawable/incredo_custom_input"
                            android:fontFamily="@font/red_hat_display_regular"
                            android:inputType="number"
                            android:paddingLeft="10dp"
                            android:textSize="@dimen/text_size" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/red_hat_display_regular"
                            android:gravity="left"
                            android:text="*Message" />


                        <EditText
                            android:id="@+id/etMessage"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_gravity="end"
                            android:background="@drawable/incredo_custom_input"
                            android:fontFamily="@font/red_hat_display_regular"
                            android:gravity="top"
                            android:inputType="textImeMultiLine"
                            android:maxLines="8"
                            android:padding="10dp"
                            android:paddingLeft="10dp"
                            android:textSize="@dimen/text_size" />

                        <TextView
                            android:id="@+id/txtSend"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/incredo_button"
                            android:fontFamily="@font/red_hat_display_bold"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="Send"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:layout_margin="20dp"
                            android:fontFamily="@font/red_hat_display_regular"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="Need further support? We are here to assist! Find us below"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imFacebook"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/white_panel"
                                android:src="@mipmap/facebook" />

                            <ImageView
                                android:id="@+id/imTwitter"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/white_panel"
                                android:src="@mipmap/twitter" />

                            <ImageView
                                android:id="@+id/imInstagram"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/white_panel"
                                android:src="@mipmap/instagram" />

                            <ImageView
                                android:id="@+id/imYoutube"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/white_panel"
                                android:src="@mipmap/youtube" />

                            <ImageView
                                android:id="@+id/imLinkedIn"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/white_panel"
                                android:src="@mipmap/linkedin" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>

